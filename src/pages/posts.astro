---
import { getImage } from "astro:assets"
// Components
import Card from "../components/Card.astro"
import Layout from "../layouts/Layout.astro"
// Resources
import baiaJpg from "../assets/images/categories/baialupo.jpg"
import guidJpg from "../assets/images/categories/guide.jpg"
import newsJpg from "../assets/images/categories/news.jpg"
import sicuJpg from "../assets/images/categories/sicurezza.jpg"

const baiaImg = await getImage({
  src: baiaJpg,
  format: "webp",
  width: 286 * 2,
  height: 193 * 2,
  fit: "cover",
  aspectRatio: "286/193",
})
const guidImg = await getImage({
  src: guidJpg,
  format: "webp",
  width: 286 * 2,
  height: 193 * 2,
  fit: "cover",
  aspectRatio: "286/193",
})
const newsImg = await getImage({
  src: newsJpg,
  format: "webp",
  width: 286 * 2,
  height: 193 * 2,
  fit: "cover",
  aspectRatio: "286/193",
})
const sicuImg = await getImage({
  src: sicuJpg,
  format: "webp",
  width: 286 * 2,
  height: 193 * 2,
  fit: "cover",
  aspectRatio: "286/193",
})

const baseUrl = import.meta.env.BASE_URL
---

<style>
  .categories {
    @apply grid
     grid-cols-1 md:grid-cols-2
     gap-2;
  }
</style>
<!-- 	286 Ã— 193 px -->
<Layout back={true}>
  <div class="flex-1 flex flex-col pb-4">
    <section class="categories">
      <Card
        link={`${baseUrl}/baialupo`}
        src={baiaImg.src}
        width={baiaImg.options.width}
        height={baiaImg.options.height}
        alt="Baialupo"
        title="Baialupo"
      />
      <Card
        link={`${baseUrl}/guide`}
        src={guidImg.src}
        width={baiaImg.options.width}
        height={baiaImg.options.height}
        alt="Guide"
        title="Guide"
      />
      <Card
        link={`${baseUrl}/news`}
        src={newsImg.src}
        width={baiaImg.options.width}
        height={baiaImg.options.height}
        alt="News"
        title="News"
      />
      <Card
        link={`${baseUrl}/sicurezza`}
        src={sicuImg.src}
        width={baiaImg.options.width}
        height={baiaImg.options.height}
        alt="Sicurezza"
        title="Sicurezza"
      />
    </section>
  </div>
</Layout>
