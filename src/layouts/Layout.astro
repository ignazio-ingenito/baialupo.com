---
import Back from "../components/Back.astro"
import Head from "../components/Head.astro"
import Navbar from "../components/Navbar.astro"
import Banner from "../components/Banner.astro"
import Meteo from "../components/Meteo.astro"
import Footer from "../components/Footer.astro"

const { aside = true, back = false } = Astro.props
---

<style>
  body {
    @apply h-screen w-screen 
     overflow-hidden 
     flex flex-col
     bg-gradient-to-b
     from-[80px] from-[#fcebd0]
     to-40% to-white;
  }

  main {
    @apply overflow-hidden
     flex flex-col flex-1 gap-y-1
     w-full
     pt-1 px-1 pb-1 sm:pt-0 sm:pb-9 
     max-w-4xl
     sm:mx-auto sm:-my-8
     text-neutral-600;
  }

  section {
    @apply flex
     flex-1 
     flex-col-reverse 
     sm:flex-row
     gap-1 
     m-0 p-0
     overflow-hidden;
  }

  article {
    @apply flex-1
    flex
    flex-col
    pr-3
    overflow-y-auto;
  }
</style>
<html lang="it">
  <Head />
  <body>
    <Navbar />
    <main>
      <Banner />
      <section>
        <article>
          {back && <Back />}
          <slot />
        </article>
        {aside && <Meteo />}
      </section>
      <Footer />
    </main>
  </body>
</html>
